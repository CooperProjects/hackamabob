<div class="jumbotron">
      <div class="container">
        <h1>Glossary Mode</h1>
        <p>This form is used to enter websites into the database. Please be sure that the sites you enter have the html tag used for your parser.</p>
       
      </div>
    </div>
<p id="notice"><%= notice %></p>

<h1>Listing Glossaries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Hitone</th>
      <th>Hittwo</th>
      <th>Hitthree</th>
      <th>X</th>
      <th>Y</th>
      <th>Z</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @glossaries.each do |glossary| %>
      <tr>
        <td><%= glossary.name %></td>
        <td><%= glossary.link %></td>
        <td><%= glossary.hitone %></td>
        <td><%= glossary.hittwo %></td>
        <td><%= glossary.hitthree %></td>
        <td><%= glossary.x %></td>
        <td><%= glossary.y %></td>
        <td><%= glossary.z %></td>
        <td><%= link_to 'Show', glossary %></td>
        <td><%= link_to 'Edit', edit_glossary_path(glossary) %></td>
        <td><%= link_to 'Destroy', glossary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Glossary', new_glossary_path %>
