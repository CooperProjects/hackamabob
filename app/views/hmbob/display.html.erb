<div id="webJumboTron" class="jumbotron">
      <div class="container">
        <h1 id="webJumboTron">H2 Website Parser</h1>
        
        <h1>
        <p >This form is used to enter websites into the database. Please be sure that
                                        the sites you enter have the html tag used for your parser.</p>
        </h1>
      
       <a class="btn btn-default" href="https://open-boot-pachanga.c9users.io/websites" role="button">Edit Site &raquo;</a>
      </div>
    </div>
<div class="container" margin-left=40px>
    <div class = "page-header">
        <h1><span  class="glyphicon glyphicon-dashboard"></span>H2 Listing</h1>
    </div>

    
    
    
    <div class="row">
        <div class="col-sm-4">
    
            <ul>
                
                <% @websites.each do |website| %>
                
                <li>
                
                
                
                    <div class="panel panel-default" >
                        
                        <div class="panel-heading">
                            <h3 class="panel-title"> <%= website.name %> </h3>
                        </div>
                        
                        <div class="panel-body">
                                <%= link_to strip_tags(website.headline), "http://#{website.name}",
                                target: "_blank" %>
                        </div>
                    </div>
                </li>
                <% end %>
            </ul>
        </div>
        
        </div>
    </div>
</div>